#!/bin/bash

# ğŸš€ Agenté–“ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸é€ä¿¡ã‚¹ã‚¯ãƒªãƒ—ãƒˆï¼ˆçµ±åˆç‰ˆï¼‰

# ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆã‚³ãƒ³ãƒ†ã‚­ã‚¹ãƒˆã®å–å¾—
get_project_prefix() {
    if [ -f ".current-project" ]; then
        local project=$(cat .current-project)
        echo "${project}-"
    else
        echo ""
    fi
}

# ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆâ†’tmuxã‚¿ãƒ¼ã‚²ãƒƒãƒˆ ãƒãƒƒãƒ”ãƒ³ã‚°ï¼ˆãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆå¯¾å¿œï¼‰
get_agent_target() {
    local prefix=$(get_project_prefix)
    case "$1" in
        "president") echo "${prefix}president" ;;
        "boss1") echo "${prefix}multiagent:0.0" ;;
        "worker1") echo "${prefix}multiagent:0.1" ;;
        "worker2") echo "${prefix}multiagent:0.2" ;;
        "worker3") echo "${prefix}multiagent:0.3" ;;
        *) echo "" ;;
    esac
}

# ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆã‚°ãƒ«ãƒ¼ãƒ—ã‚’å±•é–‹
expand_agent_group() {
    case "$1" in
        "all") echo "president boss1 worker1 worker2 worker3" ;;
        "team") echo "boss1 worker1 worker2 worker3" ;;
        "workers") echo "worker1 worker2 worker3" ;;
        *) echo "$1" ;;
    esac
}

show_usage() {
    cat << EOF
ğŸ¤– Agenté–“ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸é€ä¿¡ï¼ˆçµ±åˆç‰ˆï¼‰

ä½¿ç”¨æ–¹æ³•:
  $0 [ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆå] [ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸]                    # å˜ä¸€é€ä¿¡
  $0 [ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ1] [ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ2] ... -- [ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸]  # è¤‡æ•°é€ä¿¡
  $0 [ã‚°ãƒ«ãƒ¼ãƒ—å] [ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸]                        # ã‚°ãƒ«ãƒ¼ãƒ—é€ä¿¡
  $0 --list

åˆ©ç”¨å¯èƒ½ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ:
  president - ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆçµ±æ‹¬è²¬ä»»è€…
  boss1     - ãƒãƒ¼ãƒ ãƒªãƒ¼ãƒ€ãƒ¼  
  worker1   - å®Ÿè¡Œæ‹…å½“è€…A
  worker2   - å®Ÿè¡Œæ‹…å½“è€…B
  worker3   - å®Ÿè¡Œæ‹…å½“è€…C

åˆ©ç”¨å¯èƒ½ã‚°ãƒ«ãƒ¼ãƒ—:
  all      - å…¨å“¡ï¼ˆpresident, boss1, worker1-3ï¼‰
  team     - ãƒãƒ¼ãƒ å…¨ä½“ï¼ˆboss1, worker1-3ï¼‰
  workers  - ãƒ¯ãƒ¼ã‚«ãƒ¼å…¨å“¡ï¼ˆworker1-3ï¼‰

ä½¿ç”¨ä¾‹:
  $0 worker1 "ä½œæ¥­é–‹å§‹ã—ã¾ã™"                         # å˜ä¸€é€ä¿¡
  $0 worker1 worker2 -- "å”åŠ›ã—ã¦ä½œæ¥­ã—ã¦ãã ã•ã„"     # è¤‡æ•°é€ä¿¡
  $0 team "é€²æ—ã‚’å ±å‘Šã—ã¦ãã ã•ã„"                    # ãƒãƒ¼ãƒ å…¨ä½“ã¸
  $0 all "ç·Šæ€¥é€£çµ¡ã§ã™"                              # å…¨å“¡ã¸
EOF
}

# ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆä¸€è¦§è¡¨ç¤º
show_agents() {
    local prefix=$(get_project_prefix)
    local project_info=""
    
    if [ -n "$prefix" ]; then
        project_info=" (ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆ: ${prefix%%-})"
    fi
    
    echo "ğŸ“‹ åˆ©ç”¨å¯èƒ½ãªã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ${project_info}:"
    echo "=========================="
    echo "  president â†’ ${prefix}president:0     (ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆçµ±æ‹¬è²¬ä»»è€…)"
    echo "  boss1     â†’ ${prefix}multiagent:0.0  (ãƒãƒ¼ãƒ ãƒªãƒ¼ãƒ€ãƒ¼)"
    echo "  worker1   â†’ ${prefix}multiagent:0.1  (å®Ÿè¡Œæ‹…å½“è€…A)"
    echo "  worker2   â†’ ${prefix}multiagent:0.2  (å®Ÿè¡Œæ‹…å½“è€…B)" 
    echo "  worker3   â†’ ${prefix}multiagent:0.3  (å®Ÿè¡Œæ‹…å½“è€…C)"
    echo ""
    echo "ğŸ“‹ åˆ©ç”¨å¯èƒ½ãªã‚°ãƒ«ãƒ¼ãƒ—:"
    echo "=========================="
    echo "  all      - å…¨å“¡"
    echo "  team     - ãƒãƒ¼ãƒ ï¼ˆboss1 + workersï¼‰"
    echo "  workers  - ãƒ¯ãƒ¼ã‚«ãƒ¼å…¨å“¡"
}

# ãƒ­ã‚°è¨˜éŒ²
log_send() {
    local agent="$1"
    local message="$2"
    local timestamp=$(date '+%Y-%m-%d %H:%M:%S')
    
    mkdir -p logs
    echo "[$timestamp] $agent: SENT - \"$message\"" >> logs/send_log.txt
}

# ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸é€ä¿¡
send_message() {
    local target="$1"
    local message="$2"
    
    echo "ğŸ“¤ é€ä¿¡ä¸­: $target â† '$message'"
    
    # Claude Codeã®ãƒ—ãƒ­ãƒ³ãƒ—ãƒˆã‚’ä¸€åº¦ã‚¯ãƒªã‚¢
    tmux send-keys -t "$target" C-c
    sleep 0.3
    
    # è¤‡æ•°è¡Œãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’ä¸€æ‹¬é€ä¿¡ï¼ˆåŠ¹ç‡åŒ–ï¼‰
    # ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸å…¨ä½“ã‚’ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰çµŒç”±ã§é€ä¿¡
    if command -v pbcopy >/dev/null 2>&1; then
        # macOS: pbcopy/pbpasteä½¿ç”¨
        echo -n "$message" | pbcopy
        tmux send-keys -t "$target" C-v
        sleep 0.3
    elif command -v xclip >/dev/null 2>&1; then
        # Linux: xclipä½¿ç”¨
        echo -n "$message" | xclip -selection clipboard
        tmux send-keys -t "$target" C-S-v
        sleep 0.3
    else
        # ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ãŒä½¿ç”¨ã§ããªã„å ´åˆã¯ç›´æ¥é€ä¿¡
        # tmuxã®paste-bufferã‚’ä½¿ç”¨
        tmux set-buffer "$message"
        tmux paste-buffer -t "$target"
        sleep 0.3
    fi
    
    # ã‚¨ãƒ³ã‚¿ãƒ¼æŠ¼ä¸‹ã§é€ä¿¡å®Œäº†
    tmux send-keys -t "$target" C-m
    sleep 0.5
}

# ã‚¿ãƒ¼ã‚²ãƒƒãƒˆå­˜åœ¨ç¢ºèª
check_target() {
    local target="$1"
    local session_name="${target%%:*}"
    
    if ! tmux has-session -t "$session_name" 2>/dev/null; then
        echo "âŒ ã‚»ãƒƒã‚·ãƒ§ãƒ³ '$session_name' ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“"
        return 1
    fi
    
    return 0
}

# å˜ä¸€ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆã¸ã®é€ä¿¡
send_to_single_agent() {
    local agent_name="$1"
    local message="$2"
    
    # ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆã‚¿ãƒ¼ã‚²ãƒƒãƒˆå–å¾—
    local target
    target=$(get_agent_target "$agent_name")
    
    if [[ -z "$target" ]]; then
        echo "âŒ ã‚¨ãƒ©ãƒ¼: ä¸æ˜ãªã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ '$agent_name'"
        echo "åˆ©ç”¨å¯èƒ½ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆ: $0 --list"
        return 1
    fi
    
    # ã‚¿ãƒ¼ã‚²ãƒƒãƒˆç¢ºèª
    if ! check_target "$target"; then
        return 1
    fi
    
    # ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸é€ä¿¡
    send_message "$target" "$message"
    
    # ãƒ­ã‚°è¨˜éŒ²
    log_send "$agent_name" "$message"
    
    echo "âœ… é€ä¿¡å®Œäº†: $agent_name ã« '$message'"
    
    return 0
}

# è¤‡æ•°ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆã¸ã®é€ä¿¡
send_to_multiple_agents() {
    local agents=("$@")
    local message="${agents[-1]}"
    unset 'agents[-1]'
    
    echo "ğŸ“¢ ãƒ–ãƒ­ãƒ¼ãƒ‰ã‚­ãƒ£ã‚¹ãƒˆé€ä¿¡é–‹å§‹"
    echo "å¯¾è±¡: ${agents[*]}"
    echo "ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸: $message"
    echo "=========================="
    
    local success_count=0
    local fail_count=0
    
    for agent in "${agents[@]}"; do
        if send_to_single_agent "$agent" "$message"; then
            ((success_count++))
        else
            ((fail_count++))
        fi
        sleep 0.5  # é€ä¿¡é–“éš”
    done
    
    echo "=========================="
    echo "âœ… ãƒ–ãƒ­ãƒ¼ãƒ‰ã‚­ãƒ£ã‚¹ãƒˆå®Œäº† (æˆåŠŸ: $success_count, å¤±æ•—: $fail_count)"
}

# ãƒ¡ã‚¤ãƒ³å‡¦ç†
main() {
    if [[ $# -eq 0 ]]; then
        show_usage
        exit 1
    fi
    
    # --listã‚ªãƒ—ã‚·ãƒ§ãƒ³
    if [[ "$1" == "--list" ]]; then
        show_agents
        exit 0
    fi
    
    if [[ $# -lt 2 ]]; then
        show_usage
        exit 1
    fi
    
    # å¼•æ•°ã‚’è§£æ
    local agents=()
    local message=""
    local found_separator=false
    
    # å¼•æ•°ã‚’ãƒ‘ãƒ¼ã‚¹
    for arg in "$@"; do
        if [[ "$arg" == "--" ]]; then
            found_separator=true
            continue
        fi
        
        if [[ "$found_separator" == false ]]; then
            # ã‚»ãƒ‘ãƒ¬ãƒ¼ã‚¿å‰ã¯ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆå
            agents+=("$arg")
        else
            # ã‚»ãƒ‘ãƒ¬ãƒ¼ã‚¿å¾Œã¯ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
            if [[ -z "$message" ]]; then
                message="$arg"
            else
                message="$message $arg"
            fi
        fi
    done
    
    # ã‚»ãƒ‘ãƒ¬ãƒ¼ã‚¿ãŒãªã„å ´åˆã®å‡¦ç†
    if [[ "$found_separator" == false ]]; then
        if [[ ${#agents[@]} -eq 2 ]]; then
            # 2å¼•æ•°ã®å ´åˆ: å˜ä¸€é€ä¿¡ã¾ãŸã¯ã‚°ãƒ«ãƒ¼ãƒ—é€ä¿¡
            local expanded=$(expand_agent_group "${agents[0]}")
            if [[ "$expanded" != "${agents[0]}" ]]; then
                # ã‚°ãƒ«ãƒ¼ãƒ—é€ä¿¡
                IFS=' ' read -ra expanded_agents <<< "$expanded"
                send_to_multiple_agents "${expanded_agents[@]}" "${agents[1]}"
            else
                # å˜ä¸€é€ä¿¡
                send_to_single_agent "${agents[0]}" "${agents[1]}"
            fi
        else
            echo "âŒ ã‚¨ãƒ©ãƒ¼: è¤‡æ•°ã‚¨ãƒ¼ã‚¸ã‚§ãƒ³ãƒˆã¸ã®é€ä¿¡ã«ã¯ '--' ã‚»ãƒ‘ãƒ¬ãƒ¼ã‚¿ãŒå¿…è¦ã§ã™"
            echo "ä¾‹: $0 worker1 worker2 -- ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸"
            exit 1
        fi
    else
        # ã‚»ãƒ‘ãƒ¬ãƒ¼ã‚¿ãŒã‚ã‚‹å ´åˆ: è¤‡æ•°é€ä¿¡
        if [[ -z "$message" ]]; then
            echo "âŒ ã‚¨ãƒ©ãƒ¼: ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ãŒç©ºã§ã™"
            exit 1
        fi
        
        # ã‚°ãƒ«ãƒ¼ãƒ—åã‚’å±•é–‹
        local expanded_agents=()
        for agent in "${agents[@]}"; do
            local expanded=$(expand_agent_group "$agent")
            IFS=' ' read -ra temp_agents <<< "$expanded"
            expanded_agents+=("${temp_agents[@]}")
        done
        
        # é‡è¤‡ã‚’å‰Šé™¤
        local unique_agents=($(echo "${expanded_agents[@]}" | tr ' ' '\n' | sort -u | tr '\n' ' '))
        
        send_to_multiple_agents "${unique_agents[@]}" "$message"
    fi
}

main "$@"